#pragma once

#include <qua/type/export>
#include <stdexcept>

namespace qua
{
    namespace type
    {
        class QUA_TYPE_PUBLIC exception : public std::runtime_error
        {
        public:
            typedef std::runtime_error base;

            explicit exception(const std::string& message)
                : base(message)
            {
            }
        };
    }
}

// Unicode signature: Владимир Керимов
